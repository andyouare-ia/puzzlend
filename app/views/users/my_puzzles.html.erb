<h1>My puzzles</h1>

<% @puzzles.each do |puzzle| %>
  <div class="card-product">
    <%= cl_image_tag puzzle.photo.key if puzzle.photo.key %>
    <section>
      <div class="card-product-infos">
        <div>
          <h2>
            Name: <%= link_to puzzle.name, puzzle_path(puzzle) %>
          </h2>
          <p>
            Pieces: <%= puzzle.pieces.floor %>
          </p>
          <p>
            Price: <%= price(puzzle) %>
          </p>
        </div>
      </div>
    </section>
  </div>
<% end %>

<section>
  <%= link_to "Add New Puzzle", new_puzzle_path, class: "btn btn-gradient" %>
</section>
