<div class="container">
  <h1>My Puzzles</h1>
</div>

<div class="container">

</div>

  <div class="container">
    <div class="cards">
      <% @puzzles.each do |puzzle| %>
        <div class="card" style="width: 18rem;">
          <div class="card-category" style="background-image: url('<%= cl_image_path puzzle.photo.key if puzzle.photo.key %>')">
          </div>
          <div class="card-body">
            <h5 class="card-title"><%= puzzle.name %></h5>
            <p class="card-text"><%= puzzle.pieces.floor %> Pieces &bull; <strong><%= price(puzzle) %></strong></p>
            <%= link_to 'View details', puzzle_path(puzzle) %> | <%= link_to 'Delete', puzzle_path(puzzle), method: :delete, data: {confirm: "Are you sure?"} %>
          </div>
        </div>
      <% end %>
      <div class="card" style="width: 18rem;">
          <%= link_to new_puzzle_path  do %>
            <div class="card-category" style="background-image: url('https://res.cloudinary.com/mygreenhouses/image/upload/v1652982401/puzzlend/AddPuzz_fig5ib.png')">
            </div>
          <% end %>
          <div class="card-body card-new">
            <h5 class="card-title">Add New Title</h5>
            <p class="card-text">Pieces &bull; Price</p>
            <%= link_to "Add New Puzzle", new_puzzle_path, class: "btn btn-secondary" %>
          </div>
        </div>
    </div>
  </div>
