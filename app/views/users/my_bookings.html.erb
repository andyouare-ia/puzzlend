<div class="container">

  <h1>My Bookings: <%= pluralize(@bookings.size, "puzzle") %></h1>

  <% @bookings.each do |booking| %>
    <% puzzle = Puzzle.find(booking.puzzle_id) %>
    <div class="card-product">
      <section>
        <div class="card-product-infos">
          <div>
            <h2>
              <%= puzzle.name %>
            </h2>
            <p>
              <strong>Start date:</strong> <%= booking.start_date.strftime("%d/%m/%Y") %>
            </p>
            <p>
              <strong>End date:</strong> <%= booking.end_date.strftime("%d/%m/%Y") %>
            </p>
            <p><%= link_to '✏️ Update', '#' %> | <%= link_to '🗑️ Delete', booking_path(booking), method: :delete, data: {confirm: "Are you sure?"} %> </p>
          </div>
        </div>
      </section>
    </div>
  <% end %>

</div>
