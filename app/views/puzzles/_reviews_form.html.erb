<h2>Write a review</h2>

<%=  bootstrap_form_with(model: [puzzle, review]) do |f| %>

  <%= render "shared/flashes", object: review %>

  <%= f.text_field :username %>

  <%= f.select :stars, Review::STARS, prompt: "Pick a rating" %>

  <%= f.text_area :comment %>

  <%= f.submit 'Post Review' %>

<% end %>
</div>
