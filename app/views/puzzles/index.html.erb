<h1>Puzzle Library</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="puzzles col-sm-8">

    <div class="container">
      <%= form_tag puzzles_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a puzzle"%>
      <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>

        <% @puzzles.each do |puzzle| %>
          <div class="card-product">
            <%= cl_image_tag puzzle.photo.key if puzzle.photo.key %>
            <section>
              <div class="card-product-infos">
                <div>
                  <h2><%= link_to puzzle.name, puzzle_path(puzzle) %></h2>
                  <p><%= puzzle.pieces.floor %> Pieces</p>
                  <p><strong><%= price(puzzle) %></strong></p>
                </div>
              </div>
            </section>
          </div>
        <% end %>

    </div>
  </div>
</div>
